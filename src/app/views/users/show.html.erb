<p id="notice"><%= notice %></p>

<h2>User</h2>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Microposts</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Content</th>
      </tr>
    </thead>

    <tbody>
      <% @user.microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.id %></td>
        <td><%= micropost.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>